<html>
    <body>
        <H2><%= restaurant.name %></H2><hr>

        <% if (restaurant.photo) { %>
            <img src="data:image/jpg;base64, <%= restaurant.photo %>"><br>
        <% } %>

	<p>Borough: <%= restaurant.borough %></p>
        <p>Cuisine: <%= restaurant.cuisine %></p>
	<p>Street: <%= restaurant.address.street %></p>
        <p>Building: <%= restaurant.address.building %></p>
	<p>Zipcode: <%= restaurant.address.zipcode %></p>
        <p>GPS: [<%= restaurant.address.coord[0] %>,<%= restaurant.address.coord[1] %>]</p>
	Rating: <% if (restaurant.grades) { %>
		    <ul> <% restaurant.grades.forEach((rating) => { %>
		        <li><%= rating.score %> (<%= rating.user%>)</li>
		    <% }) %></ul>
		<% } %>
	<p>Created by: <%= restaurant.owner %></p>

	<% if (restaurant.address.coord[0] && restaurant.address.coord[1]) { %>
            <a href="/rmap?lon=<%= restaurant.address.coord[0] %>
		&lat=<%= restaurant.address.coord[1] %>">Map</a>
		<br><br>
        <% } %>

        <a href="/edit?_id=<%= restaurant._id %>">Edit</a>
	<a href="/rate?_id=<%= restaurant._id %>">Rate</a>
	<a href="/delete?_id=<%= restaurant._id %>">Delete</a>
	<a href="/">Home</a>
    </body>
</html>
